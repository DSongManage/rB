# Production Environment Configuration
# Copy this file to .env in production and fill in the values

# Django Core Settings
SECRET_KEY=your-secret-key-here-generate-new-one
DEBUG=False
ALLOWED_HOSTS=renaissblock.com,api.renaissblock.com,www.renaissblock.com

# Environment Configuration
ENVIRONMENT=production
BETA_MODE=true

# Database (PostgreSQL)
DB_NAME=renaissblock
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Application URLs
FRONTEND_URL=https://renaissblock.com
BACKEND_URL=https://api.renaissblock.com
FRONTEND_ORIGIN=https://renaissblock.com

# CORS Configuration
CORS_ORIGINS=https://renaissblock.com,https://www.renaissblock.com

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_PLATFORM_WALLET=your-platform-wallet-pubkey
PLATFORM_WALLET_PUBKEY=your-platform-wallet-pubkey
PLATFORM_USDC_WALLET_ADDRESS=your-platform-wallet-pubkey

# Platform Wallet Keypair (SENSITIVE - keep secure!)
# Option 1: JSON array of 64 bytes as env var (preferred for cloud deployments)
PLATFORM_WALLET_KEYPAIR=[1,2,3,...64 numbers...]
# Option 2: Path to keypair file (for local/VM deployments)
# PLATFORM_WALLET_KEYPAIR_PATH=/path/to/secure/platform-wallet.json

# USDC Configuration
# Devnet USDC: 4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU
# Mainnet USDC: EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
USDC_MINT_ADDRESS=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU

# Stripe Configuration (Test Mode for Beta)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_TEST_MODE=true

# Web3Auth Configuration
WEB3AUTH_CLIENT_ID=your-web3auth-client-id
WEB3AUTH_JWKS_URL=https://api-auth.web3auth.io/.well-known/jwks.json

# Email Configuration (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@renaissblock.com
ADMIN_EMAIL=admin@renaissblock.com

# Feature Flags
FEATURE_COLLABORATIVE_MINTING=true
FEATURE_ANCHOR_MINT=false

# Upload Constraints
MAX_UPLOAD_BYTES=10485760

# Celery / Redis Configuration (Required for async purchase processing)
# Get a Redis URL from your hosting provider (Render, Railway, etc.)
CELERY_BROKER_URL=redis://your-redis-url:6379/0
CELERY_RESULT_BACKEND=redis://your-redis-url:6379/0

# IPFS / Pinata Configuration (for NFT metadata storage)
# Get credentials from https://app.pinata.cloud/
PINATA_JWT=your-pinata-jwt-token
# Alternative: API key + secret (if not using JWT)
# PINATA_API_KEY=your-pinata-api-key
# PINATA_API_SECRET=your-pinata-api-secret

# Price Oracle (optional - CoinGecko is used by default, no key required)
# CoinMarketCap API key for backup pricing
# COINMARKETCAP_API_KEY=your-cmc-api-key

# ============================================================================
# OPERATIONAL READINESS SETTINGS
# ============================================================================

# Sentry Error Monitoring
# Get DSN from https://sentry.io - create a Django project
SENTRY_DSN=

# Slack Webhook for Critical Alerts
# Set up at https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# Gunicorn Configuration (adjust based on tier)
# Hobby tier (512MB): workers=2, threads=1
# Pro tier (8GB): workers=4-8, threads=2
GUNICORN_WORKERS=2
GUNICORN_THREADS=1
GUNICORN_TIMEOUT=120

# Geographic Restrictions (US-Only)
# Enable for regulatory compliance
GEO_RESTRICTION_ENABLED=false
GEO_ALLOWED_COUNTRIES=US
# Path to MaxMind GeoLite2-Country.mmdb database
# Download from: https://dev.maxmind.com/geoip/geolite2-free-geolocation-data
GEOIP_PATH=/app/geoip

# OFAC Sanctions Screening
# Required for US regulatory compliance
# Options: ofac-api.com, Chainalysis, ComplyAdvantage
OFAC_SCREENING_ENABLED=false
OFAC_API_URL=
OFAC_API_KEY=

# Maintenance Mode
# Enable to show maintenance page to all users
MAINTENANCE_MODE=false
# Bypass IPs (comma-separated) - for testing during maintenance
MAINTENANCE_BYPASS_IPS=
# Custom message shown during maintenance
MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance. Please try again later.

# Bridge.xyz Payout Configuration
# For creator USDC -> USD payouts
BRIDGE_API_KEY=
BRIDGE_WEBHOOK_SECRET=
BRIDGE_SANDBOX_MODE=true
BRIDGE_MIN_PAYOUT_THRESHOLD=10.00

# Coinbase Onramp Configuration
# For user fiat -> USDC purchases
COINBASE_ONRAMP_APP_ID=
COINBASE_WEBHOOK_SECRET=
COINBASE_MINIMUM_ONRAMP=5.00
