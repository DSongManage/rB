{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "redirects": [
    {
      "source": "/:path(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.renaissblock.com"
        }
      ],
      "destination": "https://renaissblock.com/:path",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/content/:id(\\d+)",
      "destination": "/api/render?type=content&id=:id"
    },
    {
      "source": "/profile/:username([A-Za-z0-9_]+)",
      "destination": "/api/render?type=profile&username=:username"
    },
    {
      "source": "/((?!assets/|api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
